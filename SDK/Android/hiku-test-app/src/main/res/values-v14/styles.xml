<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextStyle</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextStyle.Small</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.MyApp.Widget.ActionBar.Menu</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_action_previous_item</item>
    </style>

    <style name="NoLogoTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/MyEmptyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyEmptyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/hikuGreen</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:displayOptions">showTitle</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/hikuGreen</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:icon">@android:color/transparent</item>
    </style>

    <!-- background color for Action Bar overflow menu -->
    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel</item>
    </style>

    <style name="PopupMenuTextStyle" parent="@android:attr/textAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/text_size_small_plus</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="PopupMenuTextStyle.Small">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="MyActionBarTitleText" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.MyApp.Widget.ActionBar.Menu" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>